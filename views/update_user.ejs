<%- include('./include/_header') %>

    <main id="site-main">
        <div class="container">
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>

                <span class="text-light">Use the below form to update existing user</span>
            </div>
            <form method="POST" id="update_user">
                <input type="text" name="id" id="id" value="<%= user._id %> " class="hidden">
                <div class="edit_user">
                    <div class="form-group">
                        <label for="name" class="text-light">
                            Name: <input type="text" id="name" name="name" value="<%= user.name %> "
                                placeholder="john doe">
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="email" class="text-light">
                            Email: <input type="email" id="email" name="email" value="<%= user.email %> "
                                placeholder="john@doe.com">
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="gender" class="text-light">
                            Gender:
                            <div class="radio inline">
                                <input type="radio" id="male" name="gender" value="male" <%=user.gender==='male'
                                    && 'checked' %> >
                                <label for="male">
                                    Male
                                </label>
                            </div>
                            <div class="radio inline">
                                <input type="radio" id="female" name="gender" value="female" <%=user.gender==='female'
                                    && 'checked' %> >
                                <label for="female">
                                    Female
                                </label>
                            </div>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="status" class="text-light">
                            Status:
                            <div class="radio inline">
                                <input type="radio" id="active" name="status" value="active" <%=user.status==='active'
                                    && 'checked' %> >
                                <label for="active">Active</label>
                            </div>
                            <div class="radio inline">
                                <input type="radio" id="inactive" name="status" value="inactive"
                                    <%=user.status==='inactive' && 'checked' %> >
                                <label for="inactive">Inactive</label>
                            </div>
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Update User</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <%- include('./include/_footer') %>
        </body>

        </html>